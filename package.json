  "bugs": {
    "url": "https://github.com/pedbad/langcen_base/issues"
  },
  "homepage": "https://github.com/pedbad/langcen_base#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.47",
    "pwa-asset-generator": "^8.1.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0"
  }
}
