# ============================================================
# 🌍 Langcon — Example Environment File (.env.example)
# ============================================================
# Copy this file to `.env` and fill in real values for your setup.
# DO NOT commit your actual `.env` (it’s ignored in .gitignore).

# ─── Core Environment ───────────────────────────────────────
ENV=dev                     # "dev" for local dev, "prod" for production
DEBUG=True                  # False in production
SECRET_KEY=your-secret-key  # ⚠️ generate a secure random string for production
#python -c "from django.core.management.utils import get_random_secret_key as g; print(g())"

# ─── Site / Domain Settings ─────────────────────────────────
SITE_DOMAIN=127.0.0.1:8000  # Used in password-reset / invite links
SITE_USE_HTTPS=False        # Set True in production (for https:// links)
SITE_ORIGIN=http://127.0.0.1:8000
SITE_NAME=LangCon
SITE_DESCRIPTION=Graduate Applications - Language Condition

# ─── Allowed Hosts ──────────────────────────────────────────
ALLOWED_HOSTS=localhost,127.0.0.1
# Example production:
# ALLOWED_HOSTS=langcon.cam.ac.uk,www.langcon.cam.ac.uk

# ─── Email Backend ──────────────────────────────────────────
# Local (mock) email storage
EMAIL_BACKEND=django.core.mail.backends.filebased.EmailBackend
EMAIL_FILE_PATH=/absolute/path/to/tmp_emails
DEFAULT_FROM_EMAIL=no-reply@example.com

# Example SMTP setup for production:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=<your-password>
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=no-reply@langcen.cam.ac.uk

